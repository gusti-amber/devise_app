<div class ="flex flex-col items-center justify-center gap-10">
  <div class="text-lg">session: <%= session %></div>
  <div class="text-lg">session[:guest_user_id]: <%= session[:guest_user_id] %></div>
  <% if user_signed_in? %>
    <div class="text-lg">現在、ログインしています</div>
    <div class="text-lg">名前: <%= current_user.name %></div>
    <div class="text-lg">メールアドレス: <%= current_user.email %></div>
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
  <% else %>
    <div class="text-lg">現在、ログインしていません</div>
    <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %>
    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "パスワードリセット", new_user_password_path, class: "btn btn-primary" %>
  <% end %>
</div>
